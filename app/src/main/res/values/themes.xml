<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FitBoost2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF353535</item>
        <item name="colorPrimaryVariant">#8ED17F</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#7D97CC</item>
        <item name="colorSecondaryVariant">#EDC192</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="LinearLayoutExercise">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginTop">25dp</item>
    </style>

    <style name="TitleTreningExercises">
        <item name="android:textColor">@color/Szarawy_ciemny</item>
        <item name="android:textSize">22pt</item>
        <item name="android:layout_marginTop">80dp</item>
        <item name="fontFamily">@font/barlow_semi_condensed_black</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextTreningExercises">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/Szarawy_ciemny</item>
        <item name="android:textSize">10pt</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="fontFamily">@font/barlow_semi_condensed_bold</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>


    <style name="TextViewProfileStyle">
        <item name="android:textColor">@color/Szarawy_ciemny</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomRecyclerViewScrollBar">
        <item name="android:thumb">@drawable/custom_scrollbar_thumb</item>
    </style>

    <style name="details_description">
        <item name="android:textSize">8pt</item>
        <item name="fontFamily">@font/barlow_semi_condensed_medium</item>
        <item name="android:textStyle">italic</item>
        <item name="color">@color/black</item>
    </style>

    <style name="Home_text">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">italic</item>
        <item name="fontFamily">@font/barlow_semi_condensed_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="details_product">
        <item name="android:textSize">8pt</item>
        <item name="fontFamily">@font/barlow_semi_condensed_bold</item>
        <item name="color">@color/black</item>

    </style>

    <style name="CircularProgressBar" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progress_circular</item>
        <item name="android:progressDrawable">@drawable/progress_circular</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:minHeight">64dp</item>
    </style>

    <style name="Home_Diet_text">
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:layout_width">280dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">8pt</item>
        <item name="fontFamily">@font/barlow_semi_condensed_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>





</resources>