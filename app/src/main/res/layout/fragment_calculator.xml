<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp">


    <TextView
        android:id="@+id/goalTextView"
        style="@style/textcolorGrayToWhite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/barlow_semi_condensed_black"
        android:text="Choose your goal:"
        android:textAlignment="center"
        android:textSize="15pt" />


    <RadioGroup
        android:id="@+id/goalRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/loseWeightRadioButton"
            style="@style/textcolorGrayToWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/barlow_semi_condensed_bold"
            android:text="Lose weight" />

        <RadioButton
            android:id="@+id/keepWeightRadioButton"
            style="@style/textcolorGrayToWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/barlow_semi_condensed_bold"
            android:text="Keep weight" />

        <RadioButton
            android:id="@+id/gainWeightRadioButton"
            style="@style/textcolorGrayToWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/barlow_semi_condensed_bold"
            android:text="Gain weight" />

    </RadioGroup>

    <TextView
        android:id="@+id/genderTextView"
        style="@style/textcolorGrayToWhite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/barlow_semi_condensed_bold"
        android:text="Select your gender:"
        android:textAlignment="center"
        android:textSize="10pt"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/genderRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/maleRadioButton"
            style="@style/textcolorGrayToWhiteMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/barlow_semi_condensed_bold"
            android:text="Male" />

        <RadioButton
            android:id="@+id/femaleRadioButton"
            style="@style/textcolorGrayToWhiteFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/barlow_semi_condensed_bold"
            android:text="Female" />

    </RadioGroup>

    <TextView
        android:id="@+id/activityLevelTextView"
        style="@style/textcolorGrayToWhite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/barlow_semi_condensed_bold"
        android:text="Select your activity level:"
        android:textAlignment="center"
        android:textSize="10pt"
        android:textStyle="bold" />


    <Spinner
        android:id="@+id/activityLevelSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:entries="@array/activity_levels"
        android:fontFamily="@font/barlow_semi_condensed_bold"
        android:prompt="@string/activity_level_prompt" />

    <EditText
        android:id="@+id/ageEditText"

        style="@style/textcolorGrayToWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/barlow_semi_condensed_medium"
        android:hint="Enter your age in years"
        android:inputType="number" />

    <EditText
        android:id="@+id/weightEditText"
        style="@style/textcolorGrayToWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/barlow_semi_condensed_medium"
        android:hint="Enter your weight in kilograms"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/heightEditText"
        style="@style/textcolorGrayToWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/barlow_semi_condensed_medium"
        android:hint="Enter your height in centimeters"
        android:inputType="number" />

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/barlow_semi_condensed_black"
        android:text="Calculate BMI"
        android:textSize="10pt" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <TextView
            android:id="@+id/resultTextView"
            style="@style/textcolorGrayToWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/barlow_semi_condensed_black"
            android:gravity="center"
            android:text=""
            android:textSize="20sp" />

    </LinearLayout>


</LinearLayout>


