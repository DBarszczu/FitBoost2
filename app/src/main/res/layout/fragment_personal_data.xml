<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/PersonalDataTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="Personal Data"
        android:textColor="@color/black"
        android:textSize="32sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/txtNamePersonalData"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center|end"
                android:text="Name: "
                android:textSize="15sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txtNamePersonalDataUser"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text=""
                android:textSize="20sp" />

            <TextView
                android:id="@+id/ChangeName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableEnd="@drawable/baseline_edit_24"
                android:drawablePadding="10dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/txtSuramePersonalData"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center|end"
                android:text="Surname: "
                android:textSize="15sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txtSurnamePersonalDataUser"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text=""
                android:textSize="20sp" />

            <TextView
                android:id="@+id/ChangeSurname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableEnd="@drawable/baseline_edit_24"
                android:drawablePadding="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/txtEmailPersonalData"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center|end"
                android:text="Email: "
                android:textSize="15sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txtEmailPersonalDataUser"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text=""
                android:textSize="20sp" />

            <TextView
                android:id="@+id/ChangeEmail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableEnd="@drawable/baseline_edit_24"
                android:drawablePadding="10dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/txtPasswordPersonalData"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center|end"
                android:text="Password: "
                android:textSize="15sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txtPasswordPersonalDataUser"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:inputType="textPassword"
                android:text="Password"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/ChangePassword"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableEnd="@drawable/baseline_edit_24"
                android:drawablePadding="10dp" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>
