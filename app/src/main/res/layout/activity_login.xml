<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fitboost_login2"
    tools:context=".Login_SignUp.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="280dp"
        android:gravity="center"
        android:orientation="vertical">


        <EditText
            android:id="@+id/loginemail"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/border_login_signup"
            android:drawableLeft="@drawable/baseline_email_24"
            android:drawablePadding="8dp"
            android:fontFamily="@font/barlow_semi_condensed_medium"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="15dp"
            android:textColorHint="@color/Szarawy_ciemny"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/loginpassword"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_login_signup"
            android:drawableLeft="@drawable/baseline_password_24"
            android:drawablePadding="8dp"
            android:fontFamily="@font/barlow_semi_condensed_medium"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:textColorHint="@color/Szarawy_ciemny"
            android:textStyle="italic" />

        <Button
            android:id="@+id/bntlogin"
            android:layout_width="300dp"

            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/barlow_semi_condensed_black"
            android:text="Login"
            android:textSize="10pt"
            app:cornerRadius="8dp" />

        <TextView
            android:id="@+id/loginvia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/barlow_semi_condensed_bold"
            android:text="-------------------------- Login via --------------------------"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/bntgoogle"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:drawableBottom="@drawable/google" />


        <TextView
            android:id="@+id/txtforgotpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/barlow_semi_condensed_bold"
            android:text="I forgot my password"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/bntsignup"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/barlow_semi_condensed_black"
            android:text="Sign Up"
            android:textSize="10pt"
            app:cornerRadius="8dp" />
    </LinearLayout>

</LinearLayout>