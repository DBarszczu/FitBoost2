<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="35dp"
    android:paddingRight="35dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/barlow_semi_condensed_black"
            android:text="Nutrition plan"
            android:textAlignment="center"
            android:textColor="@color/Szarawy_ciemny"
            android:textSize="20pt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bmr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/barlow_semi_condensed_black"
                android:padding="10dp"
                android:text="Food plan for bmr of: "
                android:textColor="@color/Szarawy_ciemny"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/bmrTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/barlow_semi_condensed_black"
                android:text=""
                android:textColor="@color/Szarawy_ciemny"
                android:textSize="20sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/bntBreakfast"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/barlow_semi_condensed_black"
                android:text="Breakfast"
                android:textSize="22sp"
                app:cornerRadius="8dp" />

            <Button
                android:id="@+id/bntBrunch"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/barlow_semi_condensed_black"
                android:text="Brunch"
                android:textSize="22sp"
                app:cornerRadius="8dp" />


            <Button
                android:id="@+id/bntLunch"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/barlow_semi_condensed_black"
                android:text="Lunch"
                android:textSize="22sp"
                app:cornerRadius="8dp" />

            <Button
                android:id="@+id/bntAfternoon_Snack"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/barlow_semi_condensed_black"
                android:text="Snack"
                android:textSize="22sp"
                app:cornerRadius="8dp" />

            <Button
                android:id="@+id/bntDinner"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:fontFamily="@font/barlow_semi_condensed_black"
                android:text="Dinner"
                android:textSize="22sp"
                app:cornerRadius="8dp" />

        </LinearLayout>


    </LinearLayout>


</FrameLayout>